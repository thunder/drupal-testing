{
    "name": "thunder/drupal-testing",
    "description": "Scripts for testing drupal projects.",
    "type": "library",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "authors": [
        {
            "name": "Daniel Bosen",
            "email": "daniel.bosen@burda.com"
        }
    ],
    "bin": [
        "bin/keep-travis-running",
        "bin/test-drupal-project"
    ],
    "extra": {
        "patches": {
            "drupal/core": {
                "PhpUnitCompatibilityPhpUnit8ClassWriter cannot detect PHPUnit source directory when running PHPStan check": "https://www.drupal.org/files/issues/2020-06-08/3143604-8_0.patch"
            }
        }
    },
    "require": {
        "php": ">=7.2",
        "drupal/coder": "^8.2.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4",
        "symfony/yaml": "^3.4"
    }
}
